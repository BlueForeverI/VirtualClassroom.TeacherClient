<Window x:Class="VirtualClassroom.TeacherClient.AddMarkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Mark" SizeToContent="WidthAndHeight"
        Background="{DynamicResource WindowBackgroundBrush}" 
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="10">
                <Label>Mark: </Label>
                <TextBox x:Name="txtMark" Width="100" Margin="10 0 0 0"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <Button x:Name="btnAdd" Margin="10" Click="btnAdd_Click">Add</Button>
                <Button x:Name="btnCancel" Margin="10" Click="btnCancel_Click">Cancel</Button>
            </WrapPanel>
        </StackPanel> 
    </Grid>
</Window>
