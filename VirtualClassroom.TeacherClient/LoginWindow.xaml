<Window x:Class="VirtualClassroom.TeacherClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="10">
                <Label>Username: </Label>
                <TextBox x:Name="txtUsername" Width="150" />
            </WrapPanel>
            <WrapPanel Margin="10">
                <Label>Password: </Label>
                <TextBox x:Name="txtPassword" Width="150" />
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <Button x:Name="btnLogin" Click="btnLogin_Click" Margin="10">Login</Button>
                <Button x:Name="btnCancel" Click="btnCancel_Click" Margin="10">Cancel</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
