<Application x:Class="VirtualClassroom.AdminClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:System="clr-namespace:System;assembly=mscorlib" StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Load dark theme-->
        <ResourceDictionary x:Key="dictionaries">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme.xaml"/>
                <ResourceDictionary>
                    <System:String x:Key="defaultErrorMessage">Възникна грешка при свързването със сървъра. Проверете дали имате връзка с интернет, рестартирайте приложението и опитайте отново.</System:String>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
